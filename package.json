{
  "author": "Florian Imdahl <git@ffflorian.de>",
  "description": "@ffflorian's personal configuration files",
  "devDependencies": {
    "@evilmartians/lefthook": "2.0.13",
    "lerna": "9.0.3",
    "prettier": "3.7.4"
  },
  "engines": {
    "node": ">= 14.10"
  },
  "packageManager": "yarn@4.12.0",
  "prettier": "./packages/prettier-config/index.json",
  "private": true,
  "scripts": {
    "fix": "lerna run fix && yarn prettier --write",
    "lint": "lerna run lint && yarn prettier --list-different",
    "prettier": "prettier \"*.{json,md,yml,ts}\"",
    "release": "lerna publish",
    "test": "exit 0"
  },
  "workspaces": [
    "packages/*"
  ]
}
